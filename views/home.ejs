              <div class="row form-group">
                <div class="col-md-6 mb-3 mb-md-0">
                  <label class="text-black" for="fname"><%= lang.home.fullName %></label>
                  <input id="fullName" type="text" id="fname" class="form-control ss-item-required" name="fullName" required>
                </div>
                <div class="col-md-6">
                  <label class="text-black" for="lname"><%= lang.home.phone %></label>
                  <input id="phone" type="number" id="lname" class="form-control" name="phone">
                </div>
              </div>

              <div class="row form-group">
                
                <div class="col-md-12">
                  <label class="text-black" for="email"><%= lang.home.email %></label> 
                  <input id="email" type="email" id="email" class="form-control" name="email">
                </div>
              </div>

              <div class="row form-group">
                
                <div class="col-md-12">
                  <label class="text-black" for="subject"><%= lang.home.subject %></label> 
                  <input id="subject" type="subject" id="subject" class="form-control ss-item-required" name="subject">
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  <label class="text-black" for="message"><%= lang.home.message %></label> 
                  <textarea id="message" name="message" id="message" cols="30" rows="7" class="form-control ss-item-required" placeholder="<%= lang.home.note %>" required></textarea>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  <button data-toggle="modal" data-target="#exampleModal" type="button" class="btn btn-primary btn-md text-white" id="send_message"> <%= lang.home.submit %> </button>
                </div>
              </div>
            </form>
          </div>
          
        </div>
      </div>
