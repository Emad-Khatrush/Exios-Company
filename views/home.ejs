  <script>
    $('#send_message').click(function(event) {
      $(".messageSent").hide();
      $(".messageError").hide();
      event.preventDefault();
      var requiredField = false;
      var fields = $(".ss-item-required");

  $.each(fields, function (i, field) {
    if (!field.value){
       requiredField = true
       $(".warningMessage").show();
      };
  });

if(!requiredField) {
  $(".loadingMessage").show();
  $(".warningMessage").hide();
  
  $.ajax({
      global: false,
      type: 'POST',
      url: "/<%= lang.currentLang %>/sendMessage",
      dataType: 'html',
      data: {
          fullName: $("#fullName").val(),
          phone: $("#phone").val(),
          subject: $("#subject").val(),
          email: $("#email").val(),
          message: $("#message").val()
      },
      success: function (result) {
        $(".loadingMessage").delay(1).fadeOut("slow");
        $(".messageSent").show();
      },
      error: function (request, status, error) {
        $(".loadingMessage").delay(1).fadeOut("slow");
        $(".messageError").show();
      }
  });
}
});
</script>
  
