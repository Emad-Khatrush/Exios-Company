<!doctype html>
<html lang="<%= lang.currentLang %>">
  <head>
    <title> <%= lang.home.exiosCompany %>  </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="shortcut icon" type="image/jpg" href="favicon.ico"/>
    
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/jquery-ui.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="/css/bootstrap-datepicker.css">

    <link rel="stylesheet" href="/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="/css/aos.css" type="text/css">

    <link rel="stylesheet" href="/css/myCss.css" type="text/css">

  </head>
  <body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
  

  <div id="overlayer"></div>
  <div class="loader">
    <div class="spinner-border text-primary" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>


  <div class="site-wrap">

    <div class="site-mobile-menu site-navbar-target">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div>
   
    
    <header class="site-navbar js-sticky-header site-navbar-target" role="banner">

      <div class="container">
        <div class="row align-items-center">
          
          <div class="col-6 col-xl-2">
            <a href="#" class="h2 mb-0"> <img style="width: 160px; height: 70px;" src="/assets/images/exios-logo.png"> </a>
          </div>

          <div class="col-12 col-md-10 d-none d-xl-block">
            <nav class="site-navigation position-relative text-right" role="navigation">

              <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <li><a style="color: #000;" href="/#home-section" class="nav-link"> <%= lang.navbar.home %> </a></li>
                <li>
                  <a style="color: #000;" href="/xtracking/<%= lang.currentLang %>" class="nav-link"><%= lang.navbar.xTracking %></a>
                </li>
                <li>
                  <a style="color: #000;" href="/#about-section" class="nav-link"><%= lang.navbar.aboutUs %></a>
                </li>
                <li>
                  <a style="color: #000;" href="/#services-section" class="nav-link"><%= lang.navbar.ourService %></a>
                </li>
                <li><a style="color: #000;" href="/#contact-section" class="nav-link"><%= lang.navbar.contactUs %></a></li>
                <li>
                  <a style="color: #000;" href="/xtracking/<%= order.orderId %>/<%= lang.currentLang === 'en' ? 'ar' : 'en' %>"> 
                    <% if(lang.currentLang === 'en'){ %>
                    <img width="40px" height="40px" src="/assets/images/libya.png" /> Arabic 
                   <% }else{ %>
                    <img width="40px" height="40px" src="/assets/images/united-kingdom.png" /> English
                   <% } %> 
                  </a>
                </li>
                <li class="social"><a style="color: #000;" href="https://www.facebook.com/exioscompany" target="_blank" class="nav-link"><span class="icon-facebook"></span></a></li>
              </ul>
            </nav>
          </div>


          <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle float-right"><span style="color: black;" class="icon-menu h3"></span></a></div>
        </div>
        
      </div>
      
    </header>

    <div class="site-section cta-big-image mt-5" id="about-section">
        <div class="container">
          <div class="row mb-5 justify-content-center" style="margin-top: 100px;">
            <div class="col-md-12 text-center">
                <h2 class="section-title mb-5" data-aos="fade-up" data-aos-delay=""> طلبية رقم <%= order.orderId %>  </h2>
                <div class="stepper-wrapper mb-5">
                  <% const isActive = (num, orderState) => { if(num == orderState + 1) { return 'active'} else { return '' } } %> 
                    <div class="stepper-item <%= order.orderState >= 0 ? 'completed' : '' %>">
                      <div class="step-counter">1</div>
                      <div class="step-name">تجهيز الطلبية</div>
                    </div>
                    <% if (order.isPayment) { %>
                      <div class="stepper-item <%= order.orderState >= 1 ? 'completed' : isActive(1, order.orderState) %>">
                        <div class="step-counter"> 2  </div>
                        <div class="step-name">اتمام الشراء</div>
                      </div>
                    <% } %> 

                    <% if (order.isShipment) { %>
                    <div class="stepper-item <%= order.orderState >= 2 ? 'completed' : isActive(2, order.orderState) %>">
                      <div class="step-counter"> <%= !order.isPayment ? '2' : '3' %>  </div>
                      <div class="step-name">شحنه الى المخزن</div>
                    </div>
                    <div class="stepper-item <%= order.orderState >= 3 ? 'completed' : isActive(3, order.orderState) %>">
                      <div class="step-counter"><%= !order.isPayment ? '3' : '4' %></div>
                      <div class="step-name">الشحن الى ليبيا</div>
                    </div>
                    <div class="stepper-item <%= order.orderState >= 4 ? 'completed' : isActive(4, order.orderState) %>">
                      <div class="step-counter"><%= !order.isPayment ? '4' : '5' %></div>
                      <div class="step-name"> وصول البضائع </div>
                    </div>
                    <div class="stepper-item <%= order.orderState >= 5 ? 'completed' : isActive(5, order.orderState) %>">
                      <div class="step-counter"><%= !order.isPayment ? '5' : '6' %></div>
                      <div class="step-name"> استلام البضائع </div>
                    </div>
                    <% } %>
                  </div>

                  <h1> معلومات الزبون </h1>
                </br></br>
                  <!-- Own Order begin -->
                  <table class="table table-dark" style="margin-bottom: 75px;">
                    <thead>
                      <tr>
                        <th scope="col">الاسم الكامل</th>
                        <th scope="col">تفاصيل الطلبية</th>
                        <% if (order.isPayment) { %>
                          <th scope="col">قيمة البضائع</th>
                        <% } %> 
                        <% if (order.isShipment) { %>
                          <th scope="col">الشحن من - الى</th>
                        <% } %> 
                        <th scope="col">تاريخ المتوقع لانتهاء الطلبية</th>
                        <th scope="col">تاريخ بدأ الطلبية</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row"> <%= order.customerName %>  </th>
                        <td> <%= order.products %>  </td>
                        <% if (order.isPayment) { %>
                          <td> <%= order.totalPrice %> $ </td>
                        <% } %>
                        <% if (order.isShipment) { %>
                          <td> <%= order.fromWhere %> - <%= order.toWhere %>  </td>
                        <% } %> 
                        <td> <%= moment(order.estimatedDelivery).format('YYYY-MM-DD') || 'غير محددد بعد' %> </td>
                        <td> <%= moment(order.createdAt).format('YYYY-MM-DD hh:mm A') %>  </td>
                      </tr>
                    </tbody>
                  </table>
                  <!-- Own Order end -->

                  <h1> اخر نشاطات الطلبية </h1>
                </br></br>
                  <!-- Order Result begin -->
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th scope="col">تاريخ العملية</th>
                        <th scope="col">مكان الحركة</th>
                        <th scope="col">العملية بالتفصيل</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for( var i = order.status.length - 1; i >= 0; i--) { %>
                        <tr>
                          <th scope="row"> <%= moment(order.status[i].date).format('YYYY-MM-DD hh:mm A') %> </th>
                          <td> <%= order.status[i].movementPlace %> </td>
                          <td> <%= order.status[i].movementDesc %> </td>
                        </tr>
                      <% } %> 
                    </tbody>
                  </table>
                  <!-- Order Result end -->

              <!-- <h2 class="section-title mb-3" data-aos="fade-up" data-aos-delay=""><%= lang.home.aboutUs %></h2>
              <p class="lead" data-aos="fade-up" data-aos-delay="100"> <%= lang.home.aboutUsDesc %>  </p> -->
            </div>
          </div>  
          
        </div>  
      </div>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-5">
                <h2 class="footer-heading mb-4"> <%= lang.navbar.aboutUs %> </h2>
                <p><%= lang.home.aboutUsDesc %></p>
              </div>
              <div class="col-md-3 ml-auto">
                <h2 class="footer-heading mb-4"><%= lang.footer.quickLinks %></h2>
                <ul class="list-unstyled">
                  <li><a href="/#about-section" class="smoothscroll"><%= lang.navbar.aboutUs %></a></li>
                  <li><a href="/#services-section" class="smoothscroll"><%= lang.navbar.ourService %></a></li>
                  <li><a href="/#contact-section" class="smoothscroll"><%= lang.navbar.contactUs %></a></li>
                </ul>
              </div>
              <div class="col-md-3 footer-social">
                <h2 class="footer-heading mb-4">Follow Us</h2>
                <a href="https://www.facebook.com/exioscompany" target="_blank" class="pl-0 pr-3"><span class="icon-facebook"></span></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>

  </div> <!-- .site-wrap -->

  <script src="/js/jquery-3.3.1.min.js"></script>
  <script src="/js/jquery-ui.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/owl.carousel.min.js"></script>
  <script src="/js/jquery.countdown.min.js"></script>
  <script src="/js/jquery.easing.1.3.js"></script>
  <script src="/js/aos.js"></script>
  <script src="/js/jquery.fancybox.min.js"></script>
  <script src="/js/jquery.sticky.js"></script>
  <script src="/js/isotope.pkgd.min.js"></script>
  
  <script src="/js/main.js"></script>
  </body>
</html>